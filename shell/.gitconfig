[user]
	email = morten@linderud.pw
	name = Morten Linderud
	signingkey = 9FECBE16
[commit]
	gpgsign = true
[imap]
    folder = "Drafts"
    host = imaps://imap.linderud.pw
    port = 993
    sslverify = false
    user = "morten@linderud.pw"
[color]
	ui = auto
[alias]
	s = status
	co = checkout

	dt = difftool
	d = diff
	dc = diff --cached

	aa = add --all
	rem = remote -v

	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	fa = fetch --all

	c = commit -s -S -m
	ca = commit -a -s -S -m

	ba = branch -a

	ap = add -p
	p = push
	pom = push origin master

	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	hp = "!. ~/.githelpers && show_git_head"
	r = !GIT_NO_PAGER=1 git l -30
	ra = !git r --all
	head = !git r -1
	h = !git head

	edit = "!vim `git ls-files -m` -p"

	fs = "!. ~/.githelpers && feature_squash"
	pre = "!. ~/.githelpers && pull_request"

	mirror ="!. ~/.githelpers && git_mirror"

    difftex = difftool -y -t latex

[core]
	excludesfile = ~/.config/git/ignore
[init]
    template = ~/.config/git/templates
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = vim -d $BASE $LOCAL 
[difftool.latex]
	cmd = latexdiff-git "$LOCAL" "$REMOTE"
[merge]
	tool = vimdiff 
[mergetool]
	prompt = false
[push]
	default = current
[mirror]
	trinity = git-trinity:fox/
	default = trinity
	github = git@github.com:Foxboron/
