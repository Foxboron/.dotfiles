set $mod Mod4

font pango: Source Code Pro, Icons, FontAwesome 9

floating_modifier $mod

bindsym $mod+Return exec i3-sensible-terminal


focus_follows_mouse	no
for_window [class="^.*"] border pixel 1
for_window [class="Firefox"] move container to workspace 1
for_window [class="Spotify"] move container to workspace 8
new_window 1pixel
force_focus_wrapping yes
hide_edge_borders both

exec --no-startup-id feh --bg-scale ~/.config/i3/bckg/mountain.png
exec --no-startup-id dunst -config ~/.dunstrc
exec --no-startup-id ~/bin/lock 
exec --no-startup-id redshift 

bindsym $mod+Shift+c kill

bindsym $mod+d exec dmenu_run -nb "#101010" -fn "Source Code Pro-11.1"
bindsym $mod+n exec nmcli_dmenu 
bindsym $mod+Tab exec ~/bin/rofi-run 
bindsym $mod+Shift+Control+l exec i3lock -n -c 000000 -i /home/fox/.config/i3/bckg/mountain.png 

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right


