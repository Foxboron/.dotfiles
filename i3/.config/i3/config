bindsym $mod+Control+Shift+r restart

mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Control r mode "resize"



set $vpn (s)huttle, (v)pn, (o)ff

mode "$vpn"{
	bindsym s exec ~/.config/i3/vpn ssh arbol, mode "default"
	bindsym v exec ~/.config/i3/vpn vpn arbol, mode "default"
	bindsym o exec ~/.config/i3/vpn off, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym q mode "default"
}


bindsym $mod+c mode "$vpn"


set $xrandr (a)uto

mode "$xrandr"{

	bindsym a exec xrandr --auto, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym q mode "default"
}

bindsym $mod+x mode "$xrandr"

set $media Media Player (j,k,q,space)

mode "$media"{
	bindsym space exec playerctl play-pause, mode "default"
	bindsym k exec playerctl next 
	bindsym j exec playerctl previous
	bindsym q mode "default"
}

bindsym $mod+p mode "$media"


# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)


bar {
	tray_output primary
	position top
	mode dock
	workspace_buttons yes
	strip_workspace_numbers yes
	status_command i3blocks -c ~/.config/i3/i3blocks.conf

		colors {
			background #101010
			statusline #605c5a
# focused_workspace #101010 #101010 #dd9a64
# active_workspace #F92671  #101010 #101010
# inactive_workspace #101010 #101010 #b8b1ac
# urgent_workspace #2e3436 #9a878f
			separator #323131
	}
}
