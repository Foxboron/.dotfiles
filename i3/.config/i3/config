mode "resize" {
	bindsym h resize shrink width 10 px or 10 ppt
	bindsym j resize grow height 10 px or 10 ppt
	bindsym k resize shrink height 10 px or 10 ppt
	bindsym l resize grow width 10 px or 10 ppt

	bindsym Left resize shrink width 10 px or 10 ppt
	bindsym Down resize grow height 10 px or 10 ppt
	bindsym Up resize shrink height 10 px or 10 ppt
	bindsym Right resize grow width 10 px or 10 ppt

	bindsym Return mode "default"
	bindsym Escape mode "default"
}

bindsym $mod+Control r mode "resize"



set $vpn (s)huttle, (v)pn, (o)ff

mode "$vpn"{
	bindsym s exec ~/.config/i3/scripts/vpn ssh arbol, mode "default"
	bindsym v exec ~/.config/i3/scripts/vpn vpn arbol, mode "default"
	bindsym o exec ~/.config/i3/scripts/vpn off, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym q mode "default"
}


bindsym $mod+c mode "$vpn"


set $xrandr (a)uto

mode "$xrandr"{

	bindsym a exec xrandr --auto, mode "default"
	bindsym Return mode "default"
	bindsym Escape mode "default"
	bindsym q mode "default"
}
bindsym $mod+x mode "$xrandr"

set $media Media Player (j,k,q,space)

mode "$media"{
	bindsym space exec playerctl play-pause, mode "default"
	bindsym j exec playerctl previous
	bindsym k exec playerctl next 
	bindsym q mode "default"
	bindsym m mode "$volume"
}
bindsym $mod+p mode "$media"

set $volume Volume

mode "$volume"{
	bindsym space exec ~/bin/volume toggle, mode "default"
	bindsym j exec ~/bin/volume dec
	bindsym k exec ~/bin/volume inc 
	bindsym q mode "default"
	bindsym p mode "$media"
}
bindsym $mod+m mode "$volume"


set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym  q mode "default"
}

bindsym $mod+Pause mode "$mode_system"

