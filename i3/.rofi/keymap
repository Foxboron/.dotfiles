keymap_layout=$(setxkbmap -query | awk '
    BEGIN{layout=""}
    /^layout/{layout=$2}
    END{printf("%s",layout)}')


case "$keymap_layout" in
us)
  setxkbmap no
    notify-send 'Set keymap: NO'
  ;;
no)
  setxkbmap -layout us -variant altgr-intl
  notify-send 'Set keymap: US International'
  ;;
esac


