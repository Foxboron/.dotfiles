[color]
    ui = auto
[branch]
  autosetuprebase = always
[alias]
	s = status
    co = checkout
    di = diff
    dc = diff --cached
    aa = add --all

    ff = merge --ff-only
    pullff = pull --ff-only
    noff = merge --no-ff
    fa = fetch --all
	c = commit -m
	ap = add -p .
	p = push
	pom = p origin master

    head = !git r -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
	
	default = simple
	d = difftool
[core]
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[push]
	default = simple
