[user]
	email = morten@linderud.pw
	name = Morten Linderud
	signingkey = 9FECBE16
[gitweb]
  owner = "Morten Linderud"
[color]
	ui = auto
[branch]
	autosetuprebase = always

[alias]
	s = status
	co = checkout
	di = diff
	dc = diff --cached
	aa = add --all
	rem = remote -v

	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
	fa = fetch --all

	c = commit -m
	cs = commit -s -S -m
	csa = commit -a -s -S -m

	ap = add -p .
	p = push
	pom = push origin master

	l = "!. ~/.githelpers && pretty_git_log"
	la = !git l --all
	hp = "!. ~/.githelpers && show_git_head"
	r = !GIT_NO_PAGER=1 git l -30
	ra = !git r --all
	head = !git r -1
	h = !git head

	default = simple
	d = difftool

	edit = "!nvim `git ls-files -m` -p"

	fs = "!. ~/.githelpers && feature_squash"

	mirror ="!. ~/.githelpers && git_mirror"

[core]
	excludesfile = ~/.gitignore
[diff]
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = nvim -d $BASE $LOCAL 
[merge]
	tool = vimdiff 
[mergetool]
	prompt = false

[push]
	default = simple
[mirror]
	trinity = git-trinity:fox/
	default = trinity
	github = git@github.com:Foxboron/
